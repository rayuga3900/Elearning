<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/table1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="*">
    <!--the normal table layout gives no border rows or columns
but for row if you add
   android:background="@drawable/border_bg and also add border_bg.xml

    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <stroke
            android:width="1dp"
            android:color="#000000" />
    </shape>

    but doesnt gives border to the columns so  you can use   <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>
            to give columns the bordfer
            -->
    <!-- Data Rows -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bg">

        <TextView
            android:id="@+id/tvname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Name" />


        <TextView
            android:id="@+id/tvusername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Username" />


        <Button
            android:id="@+id/btnacc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Accept" />


        <Button
            android:id="@+id/btnrej"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Reject" />
    </TableRow>

</TableLayout>
